{
  "manifest_version": 3,
  "name": "PromptShield - PII Protection",
  "version": "1.1",
  "description": "Real-time privacy warnings for your AI prompts. Like Grammarly, but for security.",
  "icons": {
    "16": "images/logo-16.png",
    "32": "images/logo-32.png",
    "48": "images/logo-48.png",
    "128": "images/logo-128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/logo-16.png",
      "32": "images/logo-32.png",
      "48": "images/logo-48.png",
      "128": "images/logo-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://claude.ai/*",
        "https://bard.google.com/*",
        "https://gemini.google.com/*",
        "https://deepseek.com/*"
      ],
      "js": ["privacy.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles.css", "images/logo.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
